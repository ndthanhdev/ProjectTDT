<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDTX.Views.MasterPage"
             xmlns:viewModels="clr-namespace:TDTX.ViewModels;assembly=TDTX"
             xmlns:extensions="clr-namespace:TDTX.Views.Extensions;assembly=TDTX"
             xmlns:converters="clr-namespace:TDTX.Views.Converters;assembly=TDTX"
             Title="Tiêu đề"
             BindingContext="{x:Static viewModels:MasterPageViewModel.Instance}">
  <ContentPage.Resources>
    <ResourceDictionary>
      <converters:TranslateConverter x:Key="TranslateConverter"/>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand" >
      <ListView x:Name="PrimaryListViewElement" VerticalOptions="StartAndExpand" SeparatorVisibility="None"
                ItemsSource="{Binding Items}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell Text="{Binding Title}"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Label Text="{Binding Title,Converter={StaticResource TranslateConverter}}" />
      <Button Text="aaaa" HeightRequest="30"/>
      <Image HeightRequest="50" Source="Images/menu.png" BackgroundColor="Aqua"></Image>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>