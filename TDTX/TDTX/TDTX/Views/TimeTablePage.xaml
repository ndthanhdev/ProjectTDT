<?xml version="1.0" encoding="utf-8" ?>
<MultiPage x:TypeArguments="Page" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extensions="clr-namespace:TDTX.Views.Extensions;assembly=TDTX"
             xmlns:views="clr-namespace:TDTX.Views;assembly=TDTX"
             xmlns:controls="clr-namespace:TDTX.Views.Controls;assembly=TDTX"
             x:Class="TDTX.Views.TimeTablePage"
             xmlns:vm="clr-namespace:TDTX.ViewModels;assembly=TDTX"
             Title="{extensions:Translate Time table}">
  <MultiPage.Children>
    <ContentPage BindingContext="{x:Static vm:TimeTablePageViewModel.Instance}">
      <RelativeLayout x:Name="BackgroundLayout">
        <Grid x:Name="ContentLayout" BackgroundColor="Gray"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                     Property=Width,
                     Factor=1}"
                 RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                     Property=Height,
                     Factor=1,
                     Constant=-42}"/>

        <Grid x:Name="AppBar" BackgroundColor="Aqua"
                 RelativeLayout.XConstraint="{ConstraintExpression Type=Constant, Constant=0 }"
                 RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
                      Factor=1,
                      Constant=-42,
                      Property=Height}"
               RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
               Property=Width,
               Factor=1}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=Constant,
                     Constant=42}">
          <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Spacing="36">
            <controls:ButtonTextBottom Text="alo" Image="Images/calendar.png"
                                       Command="{Binding Source={x:Static vm:TimeTablePageViewModel.Instance}, Path=SelectPageCommand}" 
                                       CommandParameter="{x:Type views:TestPage}"/>
            <controls:ButtonTextBottom Text="ola" Image="Images/calendar.png"
                                       Command="{Binding Source={x:Static vm:TimeTablePageViewModel.Instance}, Path=SelectPageCommand}" 
                                       CommandParameter="{x:Type views:SettingsPage}"/>
            <controls:ButtonTextBottom Text="ala" Image="Images/calendar.png"/>
          </StackLayout>
        </Grid>

      </RelativeLayout>
    </ContentPage>
    <!--<CarouselPage x:Name="ContentPages" BackgroundColor="White">
      <ContentPage>
        <Label Text="1"></Label>
      </ContentPage>
      <ContentPage>
        <Label Text="2"></Label>
      </ContentPage>

    </CarouselPage>-->



    <!--<ContentPage x:Name="RootPage" BackgroundColor="Gray">
    </ContentPage>-->

  </MultiPage.Children>


</MultiPage>