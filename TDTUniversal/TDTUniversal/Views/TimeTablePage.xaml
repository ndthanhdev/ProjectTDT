                                  SelectionChanged="ListViewSelectionChanged"/>
                        <ListView Header="SAT" Grid.Row="6" Grid.Column="0" Style="{StaticResource ListViewStyle}"
                                  ItemsSource="{Binding OverallSaturday}"
                                  SelectionChanged="ListViewSelectionChanged"/>
